{
    "name": "Scrumboard QoL",
    "description": "A few tweaks to the University of Canterbury's Scrumboard to improve your quality of life.",
    "version": "1.1",
    "manifest_version": 3,
    "content_scripts": [
        {
            "js": ["scripts/modal-no-click-backdrop.js"],
            "run_at": "document_idle",
            "matches": [
                "https://scrumboard.csse.canterbury.ac.nz/*"
            ]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["scripts/additional-stat-cards.js", "scripts/consistency-bar.js"],
        "matches": ["https://scrumboard.csse.canterbury.ac.nz/*"]
    }],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "scrumboard-qol@lukeh.nz"
        }
    }
}